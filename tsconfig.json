{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    // TSはECMAScriptのやや互換性を意識したバージョンに変換
    "target": "ES2020",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2020",
    // node_modules からライブラリを読み込む
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ]
  }
}
